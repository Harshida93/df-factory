{
	"name": "schemadrift",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "csvwoschema",
						"type": "DatasetReference"
					},
					"name": "CSVwithoutschema"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "ParquetWOSchema",
						"type": "DatasetReference"
					},
					"name": "ParquetWOschema"
				}
			],
			"transformations": [],
			"scriptLines": [
				"source(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     inferDriftedColumnTypes: true,",
				"     ignoreNoFilesFound: false) ~> CSVwithoutschema",
				"CSVwithoutschema sink(allowSchemaDrift: true,",
				"     validateSchema: true,",
				"     format: 'parquet',",
				"     partitionFileNames:['ParquetWoSchema'],",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     partitionBy('hash', 1)) ~> ParquetWOschema"
			]
		}
	}
}